<div class="row">
  
  <!-- user info -->
  <div class="col-2">  
    <h4>Welcome back, <%= @user.first_name %>!</h4>
  </div>
  
  <!-- my books -->
  <div class="col-5">
    <h2>My Books</h2>
    
      <% if @books!=[] %>        
        <div class="books-div">
          <% @books.each do |book| %>
            <div>
              <span class="bold">Title: <span class="italic"><%= book.title %></span></span>
            </div>
            <div>
              <span class="bold">Author:</span> <%= book.author %>
            </div>
            <div>
              <span class="bold">Description:</span><%= book.description[0,100] %><%= link_to '...[Read More]', dashboard_index_path %>
            </div>
            <div>
              <span class="bold">Status: </span><%= best_in_place book, :status, type: :select, collection: [["", "Unspecified"], ["To Read", "To Read"], ["In Progress", "In Progress"]] %>
            </div>

            <div>
              <span class="bold">Status: </span><%= best_in_place book, :status, type: :checkbox, collection: {"To Read": "To Read", "In Progress": "In Progress"} %>
              <!-- [["To Read", "To Read"], ["In Progress", "In Progress"]] %> -->
            </div>

            <div>
              <%= form_for book do |f| %>

                <div>
                  <% f.label :status %><span class="bold">Status:</span>  
                  <%= f.select :status, ['To Read', 'In Progress', 'Finished'] %>
                </div>
                
                <div>
                  <%= f.submit %>
                </div>

                <div>
                  <%= link_to 'Delete', book, class: 'delete-read_book' %>
                </div>

              <% end %>
            </div>

            <div>
              <a href="<%= new_read_book_path %>"><button class="btn btn-outline-secondary">Finished Reading</button></a>
            </div>

          <% end %>
        </div>

      <% else %>
        <h5>Oh no, your list is empty! Let's get started by searching for books.</h5>
        <a href="<%= search_path %>"><button class="btn btn-outline-secondary">Search</button></a>
      <% end %>

  </div>

  <!-- read books -->
  <div class="col-5">
    <h2>Read Books</h2>

      <% if @read_books!=[] %>        
        <div class="read-books-div">
          <% @read_books.each do |book| %>
            <span class="bold">Title: <span class="italic"><%= book.title %></span></span>
            </div>
            <div>
              <span class="bold">Author:</span> <%= book.author %>
            </div>
            <div>
              <span class="bold">Description:</span><%= book.description[0,100] %><%= link_to '...[Read More]', dashboard_index_path %>
            </div>
            <div>
              {BUTTON-move_back_to_my_books}
            </div>
            <div>
              {BUTTON-delete}
            </div>
          <% end %>
        </div>

      <% else %>
        <h5>Oh no, it looks like you haven't finished any books yet. Get to reading!</h5>
      <% end %>

  </div>



</div>