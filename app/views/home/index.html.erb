<h1 class="mt-5">Home Index</h1>
<div class="mt-5">

  <!-- Header -->
  <div class="row"></div>

  <!-- center row -->
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-4 col-md-offset-4 text-center">
        <h2><%= book.title %></h2>
        <br>
        <h4><%= book.author %></h4>
        <img class="" src="<%=book.image_url%>" alt="Generic placeholder image" width="180" height="220">
        <p><%= book.description ? book.description.truncate_words(60, separator: '') : 'N/A'%>.</p>
        <p>
          <%=link_to "Preview", book, class: "btn btn-secondary" %>
          <!-- <a class="btn btn-secondary" href="#" role="button">View details »</a> -->
        </p>
      </div>
    <%end%>
  </div>
  <!-- Footer -->
  <div class="row"></div>

</div>

