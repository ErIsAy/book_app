<h2 class="mt-2 center">Welcome to our Book Search App!</h2>

<h4 class="mt-2 center italic">See what 
  <% if user_signed_in? %>
    other 
  <% else %>
    our 
  <% end %>
    users are searching for:</h4>
<div class="mt-5">

  <!-- Header -->
  <div class="row"></div>

  <!-- center row -->
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-4 col-md-offset-4 text-center">
        <h4><%= book.title %></h4>
        <p class="italic"><%= book.author %></p>
        <img class="" src="<%=book.image_url%>" alt="Generic placeholder image" width="180" height="220">
        <p class="mt-2"><%= book.description ? book.description.truncate_words(60, separator: '') : "Sorry, description not available" %>.</p>
        <p>
          <%= link_to "Preview", book, class: "btn btn-outline-info btn-block" %>
        </p>
      </div>
    <%end%>
  </div>
  <!-- Footer -->
  <div class="row"></div>

</div>